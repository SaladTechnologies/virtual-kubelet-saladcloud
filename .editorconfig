root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,cmd}]
end_of_line = crlf
indent_size = 2
max_line_length = 120

[{*.go,go.mod,go.sum}]
indent_style = tab

[*.json]
indent_size = 2
max_line_length = 120

[*.md]
indent_size = 2

[*.ps1]
end_of_line = lf
max_line_length = 120

[*.sh]
end_of_line = lf
indent_size = 2
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2
max_line_length = 120
